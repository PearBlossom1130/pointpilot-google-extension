{
    "manifest_version": 3,
    "name": "Credit Card Points Manager",
    "version": "1.0",
    "description": "Manage your credit card points easily and save locally.",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage",
      "downloads"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
  }